@model BanqueTardi.Models.Compte

@{
    ViewData["Title"] = "Details du Compte";
}

<h1>Détails</h1>

<div>
    <h4>Compte</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Banque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Banque!.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client!.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TypeCompte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeCompte!.Libelle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Solde)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Solde)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model!.CodeCourt">Modifier</a> |
    <a asp-controller="Clients" asp-action="Gerer" asp-route-id="@Model!.ClientId">Retour vers Gérer</a>
</div>
