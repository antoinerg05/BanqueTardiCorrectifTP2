@model BanqueTardi.Models.ContratAssurance

@{
    ViewData["Title"] = "Créer un Contrat d'Assurance";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="IdClient">Client</label>
        <select asp-for="IdClient" class="form-control" asp-items="@(ViewData["IdClient"] as SelectList)"></select>
        <span asp-validation-for="IdClient" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="SexeDemandeur"></label>
        <input asp-for="SexeDemandeur" class="form-control" />
        <span asp-validation-for="SexeDemandeur" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Montant"></label>
        <input asp-for="Montant" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Montant" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EstFumeur"></label>
        <input asp-for="EstFumeur" class="form-check-input" type="checkbox" />
        <span asp-validation-for="EstFumeur" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EstDiabetique"></label>
        <input asp-for="EstDiabetique" class="form-check-input" type="checkbox" />
        <span asp-validation-for="EstDiabetique" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EstHypertendu"></label>
        <input asp-for="EstHypertendu" class="form-check-input" type="checkbox" />
        <span asp-validation-for="EstHypertendu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EstPhysiquementActif"></label>
        <input asp-for="EstPhysiquementActif" class="form-check-input" type="checkbox" />
        <span asp-validation-for="EstPhysiquementActif" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
